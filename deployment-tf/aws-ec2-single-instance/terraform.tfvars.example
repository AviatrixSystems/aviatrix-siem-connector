# Example terraform.tfvars for Aviatrix Log Integration Engine
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-2"
logstash_instance_size = "t3.small"
ssh_key_name = "YOUR_SSH_KEY_NAME"

# Network Configuration
# IMPORTANT: The VPC and subnet must be able to reach your Splunk/SIEM server
vpc_id = "vpc-XXXXXXXXXXXXX"
subnet_id = "subnet-XXXXXXXXXXXXX"

# Syslog Configuration
syslog_port = "5000"
syslog_protocol = "tcp"

# Logstash Config Paths
# Use the assembled config directory which contains both the .conf file and docker_run.tftpl
logstash_output_config_path = "../../logstash-configs/assembled"
logstash_output_config_name = "splunk-hec-full.conf"  # or azure-log-ingestion-full.conf
logstash_base_config_path = "../../logstash-configs"

# Splunk Configuration
# IMPORTANT: Update these with your actual Splunk values
logstash_config_variables = {
  "splunk_hec_auth" = "YOUR_SPLUNK_HEC_TOKEN_HERE",        # Get from Splunk: Settings -> Data Inputs -> HTTP Event Collector
  "splunk_port" = "8088",
  "splunk_address" = "https://YOUR_SPLUNK_PRIVATE_IP"     # Use private IP if in same VPC
}

# Resource Tags
tags = {
  "App" = "avx-log-integration"
  "Environment" = "production"
  "Owner" = "your-name"
}
