# }

# --- Example: Dynatrace ---
# output_type = "dynatrace"
# logstash_config_variables = {
#   "dt_api_token"   = "YOUR_DT_API_TOKEN"
#   "dt_logs_token"  = "YOUR_DT_LOGS_TOKEN"
#   "dt_metrics_url" = "https://YOUR_ENV.live.dynatrace.com/api/v2/metrics/ingest"
#   "dt_logs_url"    = "https://YOUR_ENV.live.dynatrace.com/api/v2/logs/ingest"
# }

# Fargate Task Sizing
# cpu    = 512   # 0.5 vCPU
# memory = 1024  # 1 GB
# desired_count = 1

# Set to false if using private subnets with a NAT gateway
# assign_public_ip = true

# Resource Tags
tags = {
  "App"         = "avx-log-integration"
  "Environment" = "production"
  "Owner"       = "your-name"
}
