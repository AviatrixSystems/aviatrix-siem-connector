# Example terraform.tfvars for ECS Fargate deployment
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-2"

# Network Configuration
# IMPORTANT: Subnets must have internet access (public subnets or private with NAT gateway)
vpc_id     = "vpc-XXXXXXXXXXXXX"
subnet_ids = ["subnet-XXXXXXXXXXXXX", "subnet-XXXXXXXXXXXXX"]

# Syslog Configuration
syslog_port = 5000

# Log Profile - which log types to forward
# Options: "all" (default), "security", "networking"
log_profile = "all"

# --- Output Type ---
# Must match a directory in logstash-configs/outputs/
output_type = "splunk-hec"

# --- Container Image ---
# Leave empty on first apply (creates ECR, NLB, etc. without ECS service).
# After running build-and-push.sh, set this to the ECR image URI and apply again.
container_image = ""

# --- Example: Splunk HEC ---
logstash_config_variables = {
  "splunk_hec_auth" = "YOUR_SPLUNK_HEC_TOKEN_HERE"
  "splunk_port"     = "8088"
  "splunk_address"  = "https://YOUR_SPLUNK_PRIVATE_IP"
}

# --- Example: Zabbix ---
# output_type = "zabbix"
